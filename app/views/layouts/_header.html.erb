<header class="navbar-fixed">
  <nav class="white" role="navigation">
    <div class="nav-wrapper container">
      <%= link_to t("logo"), root_path, id: "logo-container",
        class: "brand-logo" %>
      <ul class="dropdown-content" id="dropdown1">
        <li><%= link_to t("buttons.profile"), "" %></li>
        <li>
          <%= link_to t("buttons.sign_out"), destroy_user_session_path,
            method: :delete %>
        </li>
      </ul>
      <ul class="right hide-on-med-and-down">
        <li><%= link_to t("home"), root_path %></li>
        <% if user_signed_in? %>
          <li>
            <a class="dropdown-button" href="#" data-activates="dropdown1">
              <%= current_user.name %>
              <i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>
        <% else %>
          <li>
            <%= link_to t("buttons.log_in"), new_user_session_path %>
          </li>
          <li>
            <%= link_to t("buttons.sign_up"), new_user_registration_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
