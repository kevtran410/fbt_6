<div class="container">
  <div class="row">
    <div class="col s8 offset-s2">
      <%= form_for resource, as: resource_name,
        url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="input-field">
            <%= f.label t "users.sessions.new.email" %>
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <%= f.label t ".name" %>
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="row">
          <div class="col s6">
            <div class="input-field">
              <%= f.label t ".address" %>
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="col s6">
            <div class="input-field">
              <%= f.label t(".phone") %>
              <%= f.text_field :phone %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <%= f.label t ".password" %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <%= f.label t ".confirm_password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>

        <div class="row">
          <div class="actions">
            <%= f.submit t("buttons.sign_up"),
              class: "btn waves-effect waves-light right" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
